@page
@model PetStay.Pages.AnuncioModel
@{
    ViewData["Title"] = "Anuncio";
}

@foreach (var anuncio in Model.Anuncios)
{
    <div class="add-container">
        <div class="anuncio-header">
            <span class="anuncio-type">Anuncio</span>
        </div>
        <img class="anuncio-img" src="@Url.Content(anuncio.UrlImagen)" alt="Anuncios" />
        <div class="anuncio-details">
            <div class="anuncio-title">@anuncio.Nombre</div>
            <div class="anuncio-description">@anuncio.Descripcion</div>
            <div class="anuncio-published-by">Publicado por: @anuncio.PublicadoPor</div>
            <div class="anuncio-button">
                <a href="@anuncio.UrlDetalles">Más detalles</a>
            </div>
            <div class="anuncio-contact">Contacto: @anuncio.Contacto</div>
        </div>
    </div>
}


